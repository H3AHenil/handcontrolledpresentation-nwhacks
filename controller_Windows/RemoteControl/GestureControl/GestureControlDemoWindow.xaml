<Window x:Class="TestOnRemoteControl.GestureControl.GestureControlDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gesture Control Demo" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Hand Gesture Control System" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Test interface for gesture actions" Foreground="Gray"/>
        </StackPanel>
        
        <!-- Status Panel -->
        <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Current Mode" FontWeight="SemiBold"/>
                    <TextBlock x:Name="ModeLabel" Text="Cursor Mode" FontSize="18" Foreground="#2196F3"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1">
                    <TextBlock Text="UDP Listener" FontWeight="SemiBold"/>
                    <TextBlock x:Name="ListenerStatusLabel" Text="Stopped" FontSize="18" Foreground="Gray"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Pinch State" FontWeight="SemiBold"/>
                    <TextBlock x:Name="PinchStateLabel" Text="Released" FontSize="18" Foreground="Green"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Control Buttons -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Mode Control -->
                <TextBlock Text="Mode Control" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <WrapPanel Margin="0,0,0,20">
                    <Button Content="Toggle Laser Mode (Clap)" Click="OnToggleLaserMode" Width="180" Height="35" Margin="0,0,10,5"/>
                    <Button Content="Cursor Mode" Click="OnSetCursorMode" Width="120" Height="35" Margin="0,0,10,5"/>
                    <Button Content="Laser Mode" Click="OnSetLaserMode" Width="120" Height="35" Margin="0,0,10,5"/>
                </WrapPanel>
                
                <!-- Pointer Control -->
                <TextBlock Text="Pointer Simulation (1 Finger)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <WrapPanel Margin="0,0,0,20">
                    <Button Content="Move to Center" Click="OnMoveCenter" Width="120" Height="35" Margin="0,0,10,5"/>
                    <Button Content="Move to Top-Left" Click="OnMoveTopLeft" Width="140" Height="35" Margin="0,0,10,5"/>
                    <Button Content="Move to Bottom-Right" Click="OnMoveBottomRight" Width="160" Height="35" Margin="0,0,10,5"/>
                    <Button Content="Circular Motion" Click="OnCircularMotion" Width="120" Height="35" Margin="0,0,10,5"/>
                </WrapPanel>
                
                <!-- Zoom Control -->
                <TextBlock Text="Zoom Simulation (2 Fingers)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <WrapPanel Margin="0,0,0,20">
                    <Button Content="Zoom In" Click="OnZoomIn" Width="100" Height="35" Margin="0,0,10,5"/>
                    <Button Content="Zoom Out" Click="OnZoomOut" Width="100" Height="35" Margin="0,0,10,5"/>
                </WrapPanel>
                
                <!-- Swipe Control -->
                <TextBlock Text="Swipe Simulation (App Switching)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <WrapPanel Margin="0,0,0,20">
                    <Button Content="Swipe Left (Prev)" Click="OnSwipeLeft" Width="140" Height="35" Margin="0,0,10,5"/>
                    <Button Content="Swipe Right (Next)" Click="OnSwipeRight" Width="140" Height="35" Margin="0,0,10,5"/>
                    <Button Content="Swipe Up (Task View)" Click="OnSwipeUp" Width="160" Height="35" Margin="0,0,10,5"/>
                </WrapPanel>
                
                <!-- Pinch Control -->
                <TextBlock Text="Pinch Simulation (Click &amp; Hold)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <WrapPanel Margin="0,0,0,20">
                    <Button Content="Start Pinch (Mouse Down)" Click="OnStartPinch" Width="180" Height="35" Margin="0,0,10,5"/>
                    <Button Content="End Pinch (Mouse Up)" Click="OnEndPinch" Width="160" Height="35" Margin="0,0,10,5"/>
                </WrapPanel>
                
                <!-- Scroll Control -->
                <TextBlock Text="Thumbs Up Roll Simulation (Scroll)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <WrapPanel Margin="0,0,0,20">
                    <Button Content="Scroll Up" Click="OnScrollUp" Width="100" Height="35" Margin="0,0,10,5"/>
                    <Button Content="Scroll Down" Click="OnScrollDown" Width="100" Height="35" Margin="0,0,10,5"/>
                </WrapPanel>
                
                <!-- UDP Listener -->
                <TextBlock Text="UDP Gesture Receiver" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="PortTextBox" Text="9090" Width="80" Height="30" VerticalContentAlignment="Center"/>
                    <Button x:Name="StartListenerButton" Content="Start Listener" Click="OnStartListener" Width="120" Height="35" Margin="10,0,0,0"/>
                    <Button x:Name="StopListenerButton" Content="Stop Listener" Click="OnStopListener" Width="120" Height="35" Margin="10,0,0,0" IsEnabled="False"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Log Output -->
        <Border Grid.Row="3" Background="#1E1E1E" CornerRadius="4" Margin="0,10,0,0" Height="100">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="LogOutput" Foreground="#00FF00" FontFamily="Consolas" Padding="10" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
