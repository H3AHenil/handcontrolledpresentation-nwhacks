<Window x:Class="TestOnRemoteControl.GestureControl.ScreenConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screen Configuration" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Multi-Screen AprilTag Configuration" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Configure which logical screen number each physical display uses. AprilTag IDs are assigned as:" 
                       Foreground="Gray" TextWrapping="Wrap" Margin="0,5,0,0"/>
            <TextBlock Text="Screen 0: Tags 0-3 | Screen 1: Tags 4-7 | Screen 2: Tags 8-11 ..." 
                       Foreground="#2196F3" FontFamily="Consolas" Margin="0,3,0,0"/>
            <TextBlock Text="Tag positions: 0=TopLeft, 1=TopRight, 2=BottomRight, 3=BottomLeft" 
                       Foreground="Gray" FontSize="11" Margin="0,3,0,0"/>
        </StackPanel>
        
        <!-- Screen List -->
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ScreenList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDDDDD" BorderThickness="1" 
                                    CornerRadius="4" Margin="5" Padding="10"
                                    Background="#FAFAFA">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Physical Screen Icon -->
                                    <Border Grid.Column="0" Width="80" Height="60" 
                                            Background="#333333" CornerRadius="3" Margin="0,0,15,0">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="Physical" Foreground="Gray" FontSize="9" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding PhysicalDisplayIndex, Mode=OneWay}" 
                                                       Foreground="White" FontSize="24" FontWeight="Bold"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Screen Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock FontSize="14" FontWeight="SemiBold">
                                            <Run Text="Display: "/>
                                            <Run Text="{Binding DeviceName, Mode=OneWay}"/>
                                            <Run Text="{Binding PrimaryLabel, Mode=OneWay}" Foreground="#2196F3"/>
                                        </TextBlock>
                                        <TextBlock Foreground="Gray" Margin="0,3,0,0">
                                            <Run Text="{Binding Resolution, Mode=OneWay}"/>
                                            <Run Text=" at position "/>
                                            <Run Text="{Binding Position, Mode=OneWay}"/>
                                        </TextBlock>
                                        <TextBlock Margin="0,3,0,0" Foreground="#666666">
                                            <Run Text="AprilTag IDs: "/>
                                            <Run Text="{Binding TagIdRange, Mode=OneWay}" FontWeight="SemiBold" Foreground="#FF5722"/>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- Logical Screen Number Input -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0">
                                        <TextBlock Text="Logical Screen #" FontSize="11" Foreground="Gray" 
                                                   HorizontalAlignment="Center" Margin="0,0,0,3"/>
                                        <Border Background="White" BorderBrush="#2196F3" BorderThickness="2" CornerRadius="4">
                                            <TextBox x:Name="LogicalNumberInput"
                                                     Text="{Binding LogicalScreenNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     Width="60" Height="35"
                                                     FontSize="18" FontWeight="Bold"
                                                     TextAlignment="Center"
                                                     VerticalContentAlignment="Center"
                                                     BorderThickness="0"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Refresh Screens" Click="OnRefreshScreens" Width="120" Height="32" Margin="0,0,10,0"/>
            <Button Content="Preview Tags" Click="OnPreviewTags" Width="100" Height="32" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="OnCancel" Width="80" Height="32" Margin="0,0,10,0"/>
            <Button Content="Apply" Click="OnApply" Width="80" Height="32" IsDefault="True" Background="#2196F3" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
