<Window x:Class="TestOnRemoteControl.GestureControl.ScreenSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Target Screen" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Screen Configuration" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Select which screen the laser pointer and cursor should target." 
                       Foreground="Gray" TextWrapping="Wrap" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Screen List -->
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ScreenList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="ScreenBorder" 
                                    BorderBrush="#DDDDDD" BorderThickness="1" 
                                    CornerRadius="4" Margin="5" Padding="10"
                                    Background="{Binding Background, Mode=OneWay}"
                                    MouseLeftButtonDown="OnScreenItemClick"
                                    Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Screen Icon -->
                                    <Border Grid.Column="0" Width="80" Height="50" 
                                            Background="#333333" CornerRadius="3" Margin="0,0,15,0">
                                        <TextBlock Text="{Binding DisplayIndex, Mode=OneWay}" 
                                                   Foreground="White" FontSize="24" FontWeight="Bold"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Screen Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock FontSize="14" FontWeight="SemiBold">
                                            <Run Text="Screen "/>
                                            <Run Text="{Binding DisplayIndex, Mode=OneWay}"/>
                                            <Run Text="{Binding PrimaryLabel, Mode=OneWay}" Foreground="#2196F3"/>
                                        </TextBlock>
                                        <TextBlock Foreground="Gray" Margin="0,3,0,0">
                                            <Run Text="{Binding Resolution, Mode=OneWay}"/>
                                            <Run Text=" at position "/>
                                            <Run Text="{Binding Position, Mode=OneWay}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding DeviceName, Mode=OneWay}" Foreground="#888888" FontSize="11"/>
                                    </StackPanel>
                                    
                                    <!-- Selection Indicator -->
                                    <Border Grid.Column="2" x:Name="SelectedIndicator"
                                            Width="24" Height="24" CornerRadius="12"
                                            Background="{Binding SelectionColor, Mode=OneWay}"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="âœ“" Foreground="White" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   FontWeight="Bold" Visibility="{Binding CheckVisibility, Mode=OneWay}"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Refresh Screens" Click="OnRefreshScreens" Width="120" Height="32" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="OnCancel" Width="80" Height="32" Margin="0,0,10,0"/>
            <Button Content="OK" Click="OnOK" Width="80" Height="32" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
